{
  "sheets": {
    "Instructions": {
      "purpose": "User guidance for editing workbook safely"
    },
    "Habits": {
      "requiredColumns": [
        "habit_id",
        "label",
        "type",
        "group_id",
        "tags",
        "score_per_unit",
        "streak_min_count",
        "min_count",
        "max_count",
        "tooltip",
        "active",
        "sort_order"
      ],
      "typeValues": ["toggle", "counter"],
      "notes": {
        "group_id": "must match a value from Groups.group_id",
        "tags": "comma-separated tag_id values from Tag Options.tag_id",
        "active": "1 = enabled, 0 = hidden"
      }
    },
    "Groups": {
      "requiredColumns": ["group_id", "group_label", "sort_order"]
    },
    "Tag Options": {
      "requiredColumns": ["tag_id", "tag_label", "tag_color"]
    },
    "Category Defaults": {
      "requiredColumns": [
        "category",
        "default_score_per_unit",
        "meaning",
        "example_use_case"
      ],
      "optional": true
    }
  }
}
