      }
    },
    "Groups": {
      "requiredColumns": ["group_id", "group_label", "sort_order"]
    },
    "Badges": {
      "requiredColumns": [
        "badge_id",
        "display_name",
        "icon",
        "color_hex",
        "min_score",
        "sort_order",
        "active"
      ]
    },
    "Category Defaults": {
      "requiredColumns": [
        "category",
        "default_score_per_unit",
        "meaning",
        "example_use_case"
      ],
      "optional": true
    }
  }
