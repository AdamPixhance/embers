{
  "sheets": {
    "Instructions": {
      "purpose": "User guidance for editing workbook safely"
    },
    "Habits": {
      "requiredColumns": [
        "habit_id",
        "label",
        "type",
        "group_id",
        "polarity",
        "score_per_unit",
        "streak_min_count",
        "min_count",
        "max_count",
        "tooltip",
        "active",
        "sort_order",
        "schedule_type",
        "schedule_days",
        "active_from",
        "inactive_from"
      ],
      "typeValues": ["toggle", "counter"],
      "notes": {
        "group_id": "must match a value from Groups.group_id",
        "polarity": "good or bad; controls left/right split in day view",
        "active": "1 = enabled, 0 = hidden",
        "schedule_type": "daily, weekdays, weekends, or custom",
        "schedule_days": "comma-separated abbreviations (Mon, Wed, Fri) when custom",
        "active_from": "optional YYYY-MM-DD start date",
        "inactive_from": "optional YYYY-MM-DD end date (exclusive)"
      }
    },
    "Groups": {
      "requiredColumns": ["group_id", "group_label", "sort_order"]
    },
    "Badges": {
      "requiredColumns": [
        "badge_id",
        "display_name",
        "icon",
        "color_hex",
        "min_score",
        "sort_order",
        "active"
      ]
    },
    "Category Defaults": {
      "requiredColumns": [
        "category",
        "default_score_per_unit",
        "meaning",
        "example_use_case"
      ],
      "optional": true
    },
    "Schedule Options": {
      "requiredColumns": ["schedule_type", "description", "uses_schedule_days"],
      "optional": true
    },
    "Schedule Days": {
      "requiredColumns": ["day_abbr", "day_name"],
      "optional": true
    }
  }
}
